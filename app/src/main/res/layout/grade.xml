<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/sessionGrading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="40dp">

        <TextView
            android:id="@+id/sessionDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Grade"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Divider -->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ff000000"
            android:insetLeft="10dp"
            android:insetRight="10dp" />

        <TextView
            android:id="@+id/Qns1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="1.   How do you rate this child's overall engagement?"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/Qns1_RS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Qns1" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button"
            android:layout_below="@+id/Qns1_RS"
            android:layout_gravity="center_horizontal"
            android:text="" />

        <TextView
            android:id="@+id/Qns2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Qns1"
            android:text="2.   How often did you observe this child's stereotype and repetitive behaviour?"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/Qns2_RS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Qns2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/Qns2_RS"
            android:layout_gravity="center_horizontal"
            android:text="" />

        <TextView
            android:id="@+id/Qns3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Qns2"
            android:text="3.   How do you rate the frequency of interaction between the child and adults?"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/Qns3_RS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Qns3" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/Qns3_RS"
            android:layout_gravity="center_horizontal"
            android:text="" />

        <TextView
            android:id="@+id/Qns4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="4.   How do you rate the quality of interaction between the child and peer?"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/Qns4_RS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Qns4" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/Qns4_RS"
            android:layout_gravity="center_horizontal"
            android:text="" />

        <TextView
            android:id="@+id/Qns5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Qns4"
            android:text="5.   How do you rate the quality of interaction between the child and peers?"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/Qns5_RS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Qns5" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/button"
            android:layout_below="@+id/Qns5_RS"
            android:layout_gravity="center_horizontal"
            android:text="" />

        <TextView
            android:id="@+id/tbChildName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Qns5_RS"
            android:text="Name"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tbQuestionIDCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Qns5_RS"
            android:text="ID"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:width="90dp"
            android:height="60dp"
            android:layout_alignStart="@+id/button"
            android:layout_below="@+id/button"
            android:onClick="OnClick_Submit"
            android:text="Submit"
            android:textColor="#ffffffff"
            android:background="@drawable/button_selector"
            />

    </LinearLayout>


</LinearLayout>
    </ScrollView>
