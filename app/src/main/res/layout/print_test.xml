<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:padding="20dp">

    <!--
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:padding="20dp">
    -->

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Session Details"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Divider -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ff000000"
        android:insetLeft="10dp"
        android:insetRight="10dp" />

    <TextView
        android:id="@+id/lbSessionId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Session ID: "
        android:textColor="#ff000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lbChildId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Child ID: "
        android:textColor="#ff000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lbSessionNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Session Number: "
        android:textColor="#ff000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lbTotalInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Total Interval: "
        android:textColor="#ff000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lbTotalFlags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Total Flags: "
        android:textColor="#ff000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lbDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Date Taken: "
        android:textColor="#ff000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lbStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Time Started: "
        android:textColor="#ff000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lbEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Time Ended: "
        android:textColor="#ff000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lbStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Session Status: "
        android:textColor="#ff000000"
        android:textSize="25sp" />

    <!--    </ScrollView>-->

</LinearLayout>