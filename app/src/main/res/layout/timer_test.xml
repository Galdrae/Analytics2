<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="bottom|top">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <!-- Top CardView Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:paddingRight="10dp">

        <!-- Top CardView -->
        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true"
            card_view:contentPaddingBottom="@dimen/activity_vertical_margin"
            card_view:contentPaddingLeft="20dp"
            card_view:contentPaddingRight="20dp"
            card_view:contentPaddingTop="20dp">

            <!-- Timer Text -->
            <TextView
                android:id="@+id/timerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top|center"
                android:layout_marginTop="60dp"
                android:text="0:00"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Interval text -->
            <TextView
                android:id="@+id/tvIntervalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top|center"
                android:layout_marginTop="100dp"
                android:text="Interval Count"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp" />

            <!--Current process text-->
            <TextView
                android:id="@+id/tvCapture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Current Process"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15dp" />

            <!-- Divider -->
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="230dp"
                android:background="@android:color/darker_gray"
                android:insetLeft="10dp"
                android:insetRight="10dp" />

            <!-- Top layout lower section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:gravity="right|bottom"
                android:orientation="horizontal">

                <!-- Top layout lower section start button -->
                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="20dp"
                    android:background="#2196F3"
                    android:text="Start" />

                <!-- Top layout lower section flag button -->
                <Button
                    android:id="@+id/btnFlag"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:background="#EF5350"
                    android:text="Flag"
                    android:textColor="#ffffffff" />

            </LinearLayout>
            <!-- End of Lower section CardView -->
        </android.support.v7.widget.CardView>
        <!-- End of Top CardView -->
    </LinearLayout>
    <!-- End of Top CardView Layout -->

    <!-- ====================================================================================== -->

    <!--    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:layout_marginTop="430dp"
            android:background="@android:color/darker_gray"/>-->

    <!-- Lower CardView Layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="425dp"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true"
            card_view:contentPaddingBottom="@dimen/activity_vertical_margin"
            card_view:contentPaddingLeft="100dp"
            card_view:contentPaddingRight="20dp"
            card_view:contentPaddingTop="20dp">

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:insetLeft="10dp"
                android:insetRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end|bottom"
                android:paddingStart="10dp"
                android:orientation="vertical">

                <!--Current child text-->
                <TextView
                    android:id="@+id/tvCurrentChild"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Observing:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="15sp" />

                <!--Current status text-->
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />

                <!--Current session number text-->
                <TextView
                    android:id="@+id/tvSession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Session: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15sp" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/darker_gray"
                    android:insetLeft="10dp"
                    android:insetRight="10dp" />

            <!-- Back Button -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#2196F3"
                android:onClick="onClick_Back"
                android:text="Back"
                android:textColor="#ffffffff" />

        </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!--dummy text-->
    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="invisible" />

    <!--dummy text-->
    <TextView
        android:id="@+id/tvPassChildName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible" />

</RelativeLayout>