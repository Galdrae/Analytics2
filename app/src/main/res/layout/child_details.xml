<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="16dp"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

<!--    <tabs.SlidingTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->


    <TabHost
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/tabHost"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <!--Child Details Tab-->

                <LinearLayout
                    android:id="@+id/childDetailTab"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Name"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_gravity="center_horizontal" />

                    <EditText
                        android:id="@+id/tbName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView3"
                        android:layout_below="@+id/textView3"
                        android:width="200dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView3"
                        android:layout_below="@+id/textView3"
                        android:text="Age"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_gravity="center_horizontal" />

                    <EditText
                        android:id="@+id/tbAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView5"
                        android:layout_below="@+id/textView4"
                        android:width="200dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView4"
                        android:layout_below="@+id/textView4"
                        android:text="Gender"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:layout_gravity="center_horizontal" />

                    <EditText
                        android:id="@+id/tbGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView5"
                        android:layout_below="@+id/textView5"
                        android:width="200dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal" />

                    <Button
                        android:id="@+id/btnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/tbGender"
                        android:onClick="onClick_Back"
                        android:text="Back"
                        android:layout_gravity="center_horizontal"
                        android:background="#2196F3"
                        android:layout_marginTop="15dp"
                        android:textColor="#ffffffff" />

                    <Button
                        android:id="@+id/btnObserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/tbGender"
                        android:layout_alignTop="@+id/btnBack"
                        android:text="Start"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="100dp"
                        android:layout_marginTop="15dp"
                        android:background="#2196F3"
                        android:textColor="#ffffffff" />

                </LinearLayout>
                    <!--End of Child detail tab-->

                <LinearLayout
                    android:id="@+id/timerTab"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    </LinearLayout>

                <RelativeLayout
                    android:id="@+id/tab3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.   How do you rate this child's overall engagement?"
                        android:id="@+id/Qns1"
                        android:textSize="20sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.   How often did you observe this child's stereotype and repetitive behaviour?"
                        android:id="@+id/Qns2"
                        android:textSize="20sp"
                        android:layout_marginTop="94dp"
                        android:layout_below="@+id/Qns1"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.   How do you rate the frequency of interaction between the child and adults?"
                        android:id="@+id/Qns3"
                        android:textSize="20sp"
                        android:layout_below="@+id/Qns2"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="122dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.   How do you rate the quality of interaction between the child and peer?"
                        android:id="@+id/Qns4"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.   How do you rate the quality of interaction between the child and peers?"
                        android:id="@+id/Qns5"
                        android:textSize="20sp"
                        android:layout_marginTop="100dp"
                        android:layout_below="@+id/Qns4"
                        android:layout_alignParentStart="true" />


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:onClick="OnClick_Submit"
                        android:id="@+id/button2"
                        android:layout_below="@+id/button"
                        android:layout_alignStart="@+id/button" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:id="@+id/tbChildName"
                        android:layout_below="@+id/Qns5_RS"
                        android:layout_alignParentStart="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View"
                        android:id="@+id/button"
                        android:onClick="OnClick_View"
                        android:layout_below="@+id/textView10"
                        android:layout_alignEnd="@+id/Qns3" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Qns1_RS"
                        android:layout_below="@+id/Qns1"
                        android:layout_alignParentStart="true" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Qns2_RS"
                        android:layout_below="@+id/Qns2"
                        android:layout_alignParentStart="true" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Qns3_RS"
                        android:layout_below="@+id/Qns3"
                        android:layout_alignParentStart="true" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Qns4_RS"
                        android:layout_below="@+id/Qns4"
                        android:layout_alignParentStart="true" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Qns5_RS"
                        android:layout_below="@+id/Qns5"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/textView6"
                        android:layout_alignStart="@+id/button"
                        android:layout_below="@+id/Qns1_RS" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/textView7"
                        android:layout_below="@+id/Qns2_RS"
                        android:layout_alignStart="@+id/textView6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/textView8"
                        android:layout_below="@+id/Qns3_RS"
                        android:layout_alignStart="@+id/textView7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/textView9"
                        android:layout_below="@+id/Qns4_RS"
                        android:layout_alignStart="@+id/textView8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/textView10"
                        android:layout_below="@+id/Qns5_RS"
                        android:layout_alignStart="@+id/button" />
                    </RelativeLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

<!--
    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
-->


</LinearLayout>