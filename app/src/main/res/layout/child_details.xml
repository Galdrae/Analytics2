<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <!--    <tabs.SlidingTabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />-->

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <!--Child Details Tab-->

                <LinearLayout
                    android:id="@+id/childDetailTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingRight="10dp">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        card_view:cardCornerRadius="4dp"
                        card_view:cardUseCompatPadding="true"
                        card_view:contentPaddingBottom="@dimen/activity_vertical_margin"
                        card_view:contentPaddingLeft="20dp"
                        card_view:contentPaddingRight="20dp"
                        card_view:contentPaddingTop="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|top"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingRight="10dp">

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:text="Child Info"
                                android:textAppearance="?android:attr/textAppearanceLarge" />

                            <!-- Divider -->
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:background="@android:color/darker_gray"
                                android:insetLeft="10dp"
                                android:insetRight="10dp" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"
                                android:text="Name"
                                android:textAppearance="?android:attr/textAppearanceLarge" />

                            <EditText
                                android:id="@+id/tbName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:width="200dp"
                                android:editable="false"
                                android:gravity="center_horizontal" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/textView4"
                                android:layout_below="@+id/textView4"
                                android:layout_gravity="center_horizontal"
                                android:text="Gender"
                                android:textAppearance="?android:attr/textAppearanceLarge" />

                            <EditText
                                android:id="@+id/tbGender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:width="200dp"
                                android:editable="false"
                                android:gravity="center_horizontal" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Age"
                                android:textAppearance="?android:attr/textAppearanceLarge" />

                            <EditText
                                android:id="@+id/tbAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:width="200dp"
                                android:editable="false"
                                android:gravity="center_horizontal" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"
                            android:insetLeft="10dp"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="60dp"
                            android:insetRight="10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|bottom"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnObserve"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:background="#2196F3"
                                android:text="Start"
                                android:textColor="#ffffffff" />

                            <Button
                                android:id="@+id/btnBack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#2196F3"
                                android:onClick="onClick_Back"
                                android:text="Back"
                                android:textColor="#ffffffff" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <!--End of Child detail tab-->

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.   How do you rate this child's overall engagement?"
                        android:id="@+id/Qns1"
                        android:textSize="20sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Qns1_RS"
                        android:layout_below="@+id/Qns1"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textView6"
                        android:layout_alignStart="@+id/button"
                        android:layout_below="@+id/Qns1_RS"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.   How often did you observe this child's stereotype and repetitive behaviour?"
                        android:id="@+id/Qns2"
                        android:textSize="20sp"
                        android:layout_below="@+id/Qns1"
                        android:layout_alignParentStart="true" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Qns2_RS"
                        android:layout_below="@+id/Qns2"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textView7"
                        android:layout_below="@+id/Qns2_RS"
                        android:layout_alignStart="@+id/textView6"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.   How do you rate the frequency of interaction between the child and adults?"
                        android:id="@+id/Qns3"
                        android:textSize="20sp"
                        android:layout_below="@+id/Qns2"
                        android:layout_alignParentStart="true"/>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Qns3_RS"
                        android:layout_below="@+id/Qns3"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textView8"
                        android:layout_below="@+id/Qns3_RS"
                        android:layout_alignStart="@+id/textView7"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.   How do you rate the quality of interaction between the child and peer?"
                        android:id="@+id/Qns4"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Qns4_RS"
                        android:layout_below="@+id/Qns4"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textView9"
                        android:layout_below="@+id/Qns4_RS"
                        android:layout_alignStart="@+id/textView8"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.   How do you rate the quality of interaction between the child and peers?"
                        android:id="@+id/Qns5"
                        android:textSize="20sp"
                        android:layout_below="@+id/Qns4"
                        android:layout_alignParentStart="true" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/Qns5_RS"
                        android:layout_below="@+id/Qns5"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textView10"
                        android:layout_below="@+id/Qns5_RS"
                        android:layout_alignStart="@+id/button"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:id="@+id/tbChildName"
                        android:layout_below="@+id/Qns5_RS"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID"
                        android:id="@+id/tbQuestionIDCreate"
                        android:layout_below="@+id/Qns5_RS"
                        android:layout_alignParentStart="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:onClick="OnClick_Submit"
                        android:id="@+id/button2"
                        android:layout_below="@+id/button"
                        android:layout_alignStart="@+id/button"
                        android:layout_gravity="right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gradingTab"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.   How do you rate this child's overall engagement?"
                        android:id="@+id/Qns12"
                        android:textSize="20sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textView62"
                        android:layout_alignStart="@+id/button"
                        android:layout_below="@+id/Qns1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.   How often did you observe this child's stereotype and repetitive behaviour?"
                        android:id="@+id/Qns22"
                        android:textSize="20sp"
                        android:layout_below="@+id/Qns1"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textView72"
                        android:layout_alignStart="@+id/textView6"
                        android:layout_below="@+id/Qns2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.   How do you rate the frequency of interaction between the child and adults?"
                        android:id="@+id/Qns32"
                        android:textSize="20sp"
                        android:layout_below="@+id/Qns2"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textView82"
                        android:layout_alignStart="@+id/textView7"
                        android:layout_below="@+id/Qns3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.   How do you rate the quality of interaction between the child and peer?"
                        android:id="@+id/Qns42"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textView92"
                        android:layout_alignStart="@+id/textView8"
                        android:layout_below="@+id/Qns4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.   How do you rate the quality of interaction between the child and peers?"
                        android:id="@+id/Qns52"
                        android:textSize="20sp"
                        android:layout_below="@+id/Qns4"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/textView102"
                        android:layout_alignStart="@+id/button"
                        android:layout_below="@+id/Qns5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:id="@+id/tbChildName2"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/Qns5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="questionID"
                        android:id="@+id/tbquestionID"
                        android:layout_below="@+id/button"
                        android:layout_alignParentStart="true"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:id="@+id/button4"
                        android:onClick="OnClick_Edit"
                        android:layout_below="@+id/button3"
                        android:layout_alignStart="@+id/button3"
                        android:layout_gravity="right" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab4"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <!--
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    -->


</LinearLayout>